<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="4dp"
    android:layout_marginBottom="1dp"
    android:background="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contest_reminder_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:fontFamily="@font/open_sans"
            android:paddingVertical="4dp"
            android:text="Dummy Contest name"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/contest_reminder_site"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/open_sans"
            android:paddingVertical="4dp"
            android:text="Site name"
            android:textColor="@color/gray"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/contest_reminder_date_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/open_sans"
            android:paddingVertical="4dp"
            android:text="Date and time"
            android:textColor="@color/gray"
            android:textSize="14sp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:background="@color/light_black"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/reminder_time_left"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/contest_reminder_timeleft"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/open_sans"
            android:gravity="top"
            android:text="20 hrs"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="14sp">
        </TextView>

    </LinearLayout>

</LinearLayout>